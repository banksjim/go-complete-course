{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Current Lesson",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "output": "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        },
        {
            "name": "Launch 01-First-App",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/lessons/01-first-app/first-app.go",
            "console": "integratedTerminal",
            "output": "${workspaceFolder}/bin/01-first-app"
        }
    ]
}
